{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {},
      {
        "usePrettierrc": true,
        "fileInfoOptions": {
          "withNodeModules": false
        }
      }
    ]
  },
  "ignorePatterns": ["node_modules/", ".next/", "build/", "dist/"]
}
